{% block main %}

    shmem_barrier_all();

    if( my_pe == 0 )
    {
        int source = 0;
        shmem_int_put( &remote, &localbuf, 1, 1 );

        shmem_fence(); // Orders both "RMA stores"

        shmem_int_put( &remote, &localbuf, 1, 1 );
    }

    shmem_barrier_all();

    printf( "PE %d: localbuf = %d, remote = %d, \n", my_pe, localbuf, remote );

{% endblock main %}