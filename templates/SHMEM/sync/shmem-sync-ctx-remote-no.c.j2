{%- endblock race_labels %}

{% block preamble %}
{% endblock preamble %}

{% block main %}
    shmem_ctx_t ctx;

    shmem_ctx_create( 0, &ctx );

    shmem_barrier_all();

    if( my_pe == 0 )
    {
        localbuf = 42;
        // CONFLICT
        shmem_ctx_int_put( ctx, &remote, &localbuf, 1, 1 );
        shmem_ctx_quiet(ctx);
        localbuf = 1337;
        // CONFLICT
        shmem_ctx_int_put( ctx, &remote, &localbuf, 1, 1 );
    }

    shmem_barrier_all();

    printf( "PE %d: %d\n", my_pe, remote );

{% endblock main %}
